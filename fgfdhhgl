<?php
function property()
{

  header("Content-Type: application/json");

  $meta_query = array('relation' => 'AND');

  if (isset($_POST['language'])) {
    $Rent_path = sanitize_text_field($_POST['language']);
    $meta_query[] = array(
      'key' => 'rent',
      'value' => $Rent_path,
      'compare' => '='
    );
  }

  print_r($_POST);
  wp_die();

}

